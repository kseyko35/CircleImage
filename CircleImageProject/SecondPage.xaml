             x:Class="CircleImageProject.SecondPage"
             >
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label HorizontalOptions="Center" Text="This circle image is created in xaml page"/>
